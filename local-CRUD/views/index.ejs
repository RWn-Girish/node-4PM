<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <a href="/">Home</a>
    <a href="/add-student">Add Student</a>
    
    <div align="center">
        <table border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Course</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student) => { %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.course %></td>
                        <td><a href="/edit-student/<%= student.id %>"><button>Edit</button></a></td>
                        <td><a href="/delete-student/<%= student.id %>"><button>Delete</button></a></td>
                    </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>