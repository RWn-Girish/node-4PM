<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div align="center">
        <h2>User Details</h2>
        <form action="/add-user" method="post" enctype="multipart/form-data">
            <table>
                <tr>
                    <td>Firstname:</td>
                    <td><input type="text" name="firstname" /></td>
                </tr>
                <tr>
                    <td>Lastname:</td>
                    <td><input type="text" name="lastname" /></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><input type="email" name="email" /></td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td><input type="password" name="password" /></td>
                </tr>
                <tr>
                    <td>Gender:</td>
                    <td>
                        <input type="radio" name="gender" value="Male" /> Male
                        <input type="radio" name="gender" value="Female" /> Female
                    </td>
                </tr>
                <tr>
                    <td>MobileNo:</td>
                    <td><input type="number" name="mobileNo" /></td>
                </tr>
                <tr>
                    <td>Profile Image:</td>
                    <td><input type="file" name="profile" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Add User" /></td>
                </tr>
            </table>
        </form>
    </div>
    <hr />
    <div align="center">
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>MobileNo</th>
                    <th>Image</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, i)=> { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.gender %></td>
                        <td><%= user.mobileNo %></td>
                        <td><img src="<%= user.profile %>" width="100px" /></td>
                        <td><a href="/edit-user/<%= user.id %>"><button>Edit</button></a></td>
                        <td><a href="/delete-user/<%= user.id %>"><button>Delete</button></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>